{
    "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "root": true,
    "ignorePatterns": ["out/**/*"],
    "env": {
        "browser": true,
        "node": true
    },
    "rules": {
        "@typescript-eslint/no-unused-vars": [
            "warn",
            { "argsIgnorePattern": "^_+$" }
        ],
        "@typescript-eslint/no-explicit-any": ["off"],
        "semi": ["error", "always"]
    }
}
